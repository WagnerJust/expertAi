# Environment variables for Docker Compose
# Copy this file to .env and update the values as needed

# Path to the initial corpus directory containing PDFs to be ingested on startup
INITIAL_CORPUS_PATH=/path/to/your/initial/corpus/directory/

# PostgreSQL Database Configuration
POSTGRES_DB=llm_db
POSTGRES_USER=llm_user
POSTGRES_PASSWORD=llm_password

# Database URL (used by the application)
DB_URL=postgresql://llm_user:llm_password@postgres:5432/llm_db
